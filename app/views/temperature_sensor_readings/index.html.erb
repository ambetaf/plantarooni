<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= will_paginate @readings %>
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Measurement</th>
          <th>Date</th>
        </tr>
      </thead>

      <% @readings.each do |reading| %>
      <tbody class="text-left">
        <tr>
          <td>
            <%= reading.measurement %>
          </td>
          <td>
            <%= reading.created_at.strftime("(%X)%Y-%m-%d") %>
          </td>
        </tr>
      </tbody>
      <% end %>

    </table>
    <%= will_paginate @readings %>
  </div>
  <div class="col-md-3"></div>
</div>
